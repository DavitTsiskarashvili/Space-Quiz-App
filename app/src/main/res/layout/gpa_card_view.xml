<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_26_dp"
    android:backgroundTint="@color/blue_secondary_default" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_20_dp" >

        <View
            android:id="@+id/gpaBackgroundView"
            android:layout_width="@dimen/dimen_82_dp"
            android:layout_height="@dimen/dimen_35_dp"
            android:background="@drawable/shape_gpa_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gpaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10_dp"
            style="@style/bigMyriadGeo_Regular"
            android:text="@string/GPA"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/gpaBackgroundView"
            app:layout_constraintEnd_toStartOf="@id/gpaTextView"
            app:layout_constraintTop_toTopOf="@id/gpaBackgroundView"
            app:layout_constraintBottom_toBottomOf="@id/gpaBackgroundView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gpaScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_4_dp"
            android:layout_marginEnd="@dimen/dimen_10_dp"
            android:textColor="@color/yellow_primary"
            android:textStyle="bold"
            tools:text="4.0"
            app:layout_constraintBottom_toBottomOf="@id/gpaBackgroundView"
            app:layout_constraintEnd_toEndOf="@id/gpaBackgroundView"
            app:layout_constraintStart_toEndOf="@id/gpaTextView"
            app:layout_constraintTop_toTopOf="@id/gpaBackgroundView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gpaDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/smallMyriadGeo_Regular"
            android:text="@string/details"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/ic_details_arrow"
            android:drawablePadding="@dimen/dimen_4_dp"
            android:layout_marginEnd="@dimen/dimen_30_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
