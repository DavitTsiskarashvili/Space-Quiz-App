<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.space.quiz_app.presentation.ui.login.ui.QuizLoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/quiz_login_fragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.space.quiz_app.presentation.ui.home.ui.QuizHomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/quiz_home_fragment" />
    <fragment
        android:id="@+id/questionsFragment"
        android:name="com.space.quiz_app.presentation.ui.questions.ui.QuizQuestionsFragment"
        android:label="fragment_questions"
        tools:layout="@layout/quiz_questions_fragment" >
        <argument
            android:name="subjectUIModel"
            app:argType="com.space.quiz_app.presentation.feature.model.subject.QuizSubjectUIModel" />
    </fragment>
    <fragment
        android:id="@+id/gpaFragment"
        android:name="com.space.quiz_app.presentation.ui.details.ui.QuizDetailsFragment"
        android:label="fragment_gpa"
        tools:layout="@layout/quiz_details_fragment" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment" />
    <action
        android:id="@+id/action_global_gpaFragment"
        app:destination="@id/gpaFragment" />
    <action
        android:id="@+id/action_global_questionsFragment"
        app:destination="@id/questionsFragment" />
</navigation>